{
  "name": "配音工具",
  "version": "1.0.0",
  "description": "基于AI的配音工具，支持文案生成、角色分配和TTS配音",
  "main": "dist-electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build-electron": "vue-tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron": "wait-on tcp:5178 && electron .",
    "electron-dev": "concurrently \"npm run dev\" \"npm run electron\" --no-deprecation",
    "electron-pack": "npm run build && electron-builder -mwl",
    "dist": "npm run build && electron-builder",
    "dist-win": "npm run build && electron-builder --win --x64",
    "dist-mac": "npm run build && electron-builder --mac --x64",
    "dist-linux": "npm run build && electron-builder --linux --x64"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "pinia": "^2.1.7",
    "vuetify": "^3.4.0",
    "@mdi/font": "^7.4.47",
    "electron-store": "^8.1.0",
    "axios": "^1.6.0",
    "jszip": "^3.10.1",
    "srt-parser-2": "^1.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/tsconfig": "^0.4.0",
    "concurrently": "^8.2.2",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "sass": "^1.69.0",
    "typescript": "~5.2.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.15.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vue-tsc": "^1.8.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.配音工具.app",
    "productName": "配音工具",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
